<script src="~/Scripts/angular.min.js"></script>
<div ng-app="myApp" ng-controller="myCtrl">
    <input type="text" ng-model="Nome"/>
    <input type="text" ng-model="Sobrenome"/>

    <span ng-bind="NomeCompleto()"></span>
</div>
<script>
    var controller = angular.module("myApp", []).controller("myCtrl", function($scope) {
        $scope.Nome = "Danilo";
        $scope.Sobrenome = "Silva";

        $scope.NomeCompleto = function() {
            return $scope.Nome + " " + $scope.Sobrenome;
        }
    });
</script>
