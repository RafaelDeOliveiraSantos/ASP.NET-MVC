@section scripts {
    <script>
        $(function() {
            $("#principal").click(function() {
                var statusAtual = $(this).is(":checked");
                $("input[type=checkbox]").not($(this)).each(function() {
                    $(this).prop("checked", statusAtual);
                });
            });
        });
    </script>
}


