@model IEnumerable<TreinamentoBenner.Core.Model.Telefone>

<p class="h5">
    <a href="javascript:abrirDialogTelefone();">
        <span class="glyphicon glyphicon-plus"></span> Novo
    </a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            <a href="javascript:alterarTelefone(@item.Id, '@item.Numero');">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>
            <a href="javascript:excluirTelefone(@item.Id);">
                <span class="glyphicon glyphicon-remove"></span>
            </a>
        </td>
    </tr>
}
</table>
